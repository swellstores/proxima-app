---
import { SwellTheme } from '@swell/storefrontjs';

interface Props {
  theme: SwellTheme;
  content: ThemeSectionGroup;
  data: SwellData;
}

const { theme, content, data } = Astro.props;

const sections = await theme.renderPageSections(content, data);
---

{
  sections.map(({ section, output, tag: Tag /* FIXME */ }: any) => (
    <div data-swell-section={section?.type || 'unknown'} set:html={output} />
  ))
}
