---
import { SwellTheme } from "../swell/theme";

interface Props {
	theme: SwellTheme,
	page_title?: string;
	page_description?: string;
	props?: {
		[key: string]: any;
	};
}
const { theme, page_title, page_description, props } = Astro.props;

const contentForHeader = await Astro.slots.render('content_for_header');
const contentForLayout = await Astro.slots.render('content_for_layout');

const content = await theme.renderLayout({
	page_title,
	page_description,
	content_for_header: contentForHeader,
	content_for_layout: contentForLayout,
	...props,
});

---

<Fragment set:html={content} />