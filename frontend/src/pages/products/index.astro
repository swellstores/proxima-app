---
import { CategoryResource, ProductResource } from '@/resources';
import { handleServerRequest } from '@/utils/server';
import ThemePage from '@/components/ThemePage.astro';
import { parseResources } from '@/utils/server-resources';

import type { AstroGlobal } from 'astro';
import type { Swell } from '@swell/apps-sdk';

export async function getData(swell: Swell, Astro?: AstroGlobal) {
  const productId = Astro?.url?.searchParams?.get('product_id');
  const categoryId = Astro?.url?.searchParams?.get('category');

  return {
    category: new CategoryResource(swell, categoryId || 'all'),
    product: productId
      ? new ProductResource(swell, productId, {
          $recommendations: true,
        })
      : null,
  };
}

export const getJSON = handleServerRequest(async ({ swell }) => {
  const data = await getData(swell);
  return parseResources(data);
});
---

<ThemePage
  id="products/index"
  title="{{ category.meta_title | default: category.name }}"
  description="{{ category.meta_description | default: category.description }}"
  getData={(swell) => getData(swell, Astro)}
/>
