---
import { Swell } from '@swell/storefront-sdk';
import { BlogCategoryResource } from '@/resources/blog';
import ThemePage from '../../../components/ThemePage.astro';

const { category } = Astro.params;
---

<ThemePage
  id="blogs/category"
  required="category.id"
  title="{{ category.meta_title | default: category.title }}"
  description="{{ category.meta_description | default: category.description }}"
  getData={(swell: Swell) => ({
    category: new BlogCategoryResource(swell, category as string),
  })}
/>
