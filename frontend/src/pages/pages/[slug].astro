---
import { Swell } from '@swell/storefront-sdk';
import { PageResource } from '@/resources/page';
import ThemePage from '@/components/ThemePage.astro';

const { slug } = Astro.params;
---

<ThemePage
  id="pages/page"
  required="page.id"
  title="{{ page.meta_title | default: page.name }}"
  description="{{ page.meta_description | default: page.description }}"
  getData={(swell: Swell) => ({
    page: new PageResource(swell, slug as string),
  })}
/>
